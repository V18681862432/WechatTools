<!--pages/lib/calcMech/calcMech.wxml-->
<view class='lib_bg'>
  <image src='../../../images/bg_04.jpg'></image>
</view>
<view class="content">
  <view class="layout-top">
    <view class="screen">
     {{screenData}}
    </view>
  </view>
  <view class="layout-bottom">
    <view class="btnGroup">
      <view class="item func" bindtap="clickBtn" id="{{idc}}">С</view>
      <view class="item func" bindtap="clickBtn" id="{{idb}}">←</view>
      <view class="item func iconBtn" bindtap="history">
          <icon type="{{iconType}}" color="{{iconColor}}" class="icon" size="30"/>
      </view>
      <view class="item func" bindtap="clickBtn" id="{{idadd}}">＋</view>
    </view>
    <view class="btnGroup">
      <view class="item num" bindtap="clickBtn" id="{{id9}}">9</view>
      <view class="item num" bindtap="clickBtn" id="{{id8}}">8</view>
      <view class="item num" bindtap="clickBtn" id="{{id7}}">7</view>
      <view class="item func" bindtap="clickBtn" id="{{idj}}">－</view>
    </view>
    <view class="btnGroup">
      <view class="item num" bindtap="clickBtn" id="{{id6}}">6</view>
      <view class="item num" bindtap="clickBtn" id="{{id5}}">5</view>
      <view class="item num" bindtap="clickBtn" id="{{id4}}">4</view>
      <view class="item func" bindtap="clickBtn" id="{{idx}}">×</view>
    </view>
    <view class="btnGroup">
      <view class="item num" bindtap="clickBtn" id="{{id3}}">3</view>
      <view class="item num" bindtap="clickBtn" id="{{id2}}">2</view>
      <view class="item num" bindtap="clickBtn" id="{{id1}}">1</view>
      <view class="item func" bindtap="clickBtn" id="{{iddiv}}">÷</view>
    </view>
    <view class="btnGroup">
      <view class="item num zero" bindtap="clickBtn" id="{{id0}}">0</view>
      <view class="item num" bindtap="clickBtn" id="{{idd}}">.</view>
      <view class="item func" bindtap="clickBtn" id="{{ide}}">＝</view>
    </view>
  </view>
</view>