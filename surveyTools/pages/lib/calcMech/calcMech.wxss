/* pages/lib/calcMech/calcMech.wxss */
.content {
    position: relative;
    z-index: 10;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-family: "Microsoft YaHei";
    overflow-x: hidden;
}
.layout-top{
    width: 100%;
}
.layout-bottom{
    width: 100%;
}
.screen {
    text-align: right;
    width: 100%;
    line-height: 260rpx;
    padding: 0 10rpx;
    font-size: 60px;
    box-sizing: border-box;
    color:#333;
}
.btnGroup {
    display: flex;
    flex-direction: row;
    flex: 1;
    width: 100%;
}
.item {
    width:140rpx;
    height: 140rpx;
    border-radius: 50%;
    margin: 23.75rpx;
    font-size: 50rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
}
.item:active {
    color: #ff0000;
    background-color: #00869c;
}
.zero{
    width: 327.5rpx;
    height: 140rpx;
    border-radius: 70rpx;
}
.func {
    color: #fef4e9;
    background: #f78d1d;
}
.num {
    color:#fff;
    background-color: #0095cd;
}
.iconBtn{
    display: flex;
}
.icon{
   display: flex;
   align-items: center;
   width:100%;
   justify-content: center;
   color: #333;
}