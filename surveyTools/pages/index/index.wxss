.homePage{
}
.bg{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #dfdfdf;
}
swiper{
  width: 100%;
  height: 300rpx;
}
swiper-item image{
  width: 100%;
  height: 300rpx;
}
.container{
  position: relative;
  z-index: 3;
}
.container .title{
  position: relative;
  width: 90%;
  margin: 0rpx auto 0;
  padding: 20rpx;
  text-align: center;
  font-size: 38rpx;
  color: #403d3d;
}
.container .title::before,.container .title::after{
  background: #ccc;
  content: "";
  height: 1px;
  position: absolute;
  top: 0%;
  width: 30%;
}
.container .title::before{
  left: 20rpx;
}
.container .title::after{
  right: 20rpx;
}
.item_wrapper{
  margin-top: 50rpx;
}
.item_wrapper::after{
  content: '';
  display: block;
  clear: both;
}
.item{
  float: left;
  width: 50%;
  text-align: center;
  margin-bottom: 50rpx;
}
.item image{
  display: inline-block;
  width: 250rpx;
  height: 250rpx;
}
.item .desc{
  font-size: 32rpx;
  color: #403d3d;
}