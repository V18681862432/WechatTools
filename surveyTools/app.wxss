page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 60rpx;
  line-height: 1.5;
}
/* 工具分页面通用样式 */
.lib_bg{
  position: fixed;
  background-color: #efefef;
  width: 100%;
  height: 100%;
  z-index: 10;
}
.lib_bg image{
  position: fixed;
  width: 100%;
  bottom: 0;
}
.page{
  position: relative;
  z-index: 10;
  color: #666;
}
.page_hd{
  padding: 20rpx 0 10rpx;
  text-align: center;
}
.page_title{
  display: inline-block;
  padding: 15rpx 40rpx;
  font-size: 34rpx;
  color: #666;
  border-bottom: 1rpx solid #ddd;
}
.show_img_wrapper{
  padding-top: 20rpx;
  text-align: center
}
.show_img_wrapper image{
  display: inline-block;
  width: 300rpx;
  height: 300rpx;
}
.input_wrapper .input_title{
  color: #00869c;
}
.page_bd .btn_wrapper{
  padding: 0 20rpx;
  display: flex;
}
.page_bd .calc_btn{
  font-size: 32rpx;
  background-color: #f5f5f5;
  border-color: #000;
  color: #666;
  width: 310rpx;
  margin: 40rpx 20rpx;
}
.page_bd .calc_btn_hover{
  background-color: #00869c;
  border-color: #00869c;
  color: #fff;
}